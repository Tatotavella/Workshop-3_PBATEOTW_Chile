.PHONY: default help object executable all clean

LAMMPS = lammps-9Oct12

default: help

help:
	@echo "\
Options:\n\
  make all:		makes serial version of lammps including awsem code. This just calls a modified Makefile inside lammps src\n\
  make backbone:	makes serial version of lammps updating fix_backbone code.\n\
  make clean:		deletes objects files generated by make all\n\
  make help:		display this help. This is just a shortcut to the modified Makefile inside lammps src code"

all: 
	cp awsemmd-CGpH/*.cpp awsemmd-CGpH/*.h ./$(LAMMPS)/src
	$(MAKE) -C ./$(LAMMPS)/src serial
backbone: 
	cp awsemmd-CGpH/fix_backbone.cpp awsemmd-CGpH/fix_backbone.h ./$(LAMMPS)/src
	$(MAKE) -C ./$(LAMMPS)/src serial
clean:
	$(MAKE) -C ./$(LAMMPS)/src clean-all

